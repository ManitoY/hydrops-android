<?xml version="1.0" encoding="utf-8"?>
<com.edu.zwu.hydrops.view.LoginLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_total_scrollview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:scrollbars="none">
    <LinearLayout
        android:id="@+id/register_total_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <com.edu.zwu.hydrops.view.CircleImageView
            android:id="@+id/register_head"
            android:clickable="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:src="@drawable/icon_register_head"/>

        <com.edu.zwu.hydrops.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/transparent_white"
            android:text="请选择头像"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/login_line"/>

            <LinearLayout
                android:id="@+id/register_account_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white">

                <ImageView
                    style="@style/login_img_style"
                    android:src="@drawable/icon_account"/>

                <EditText
                    android:id="@+id/register_input_account"
                    style="@style/login_edit_style"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:hint="请输入您的手机号码"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/login_line_middle"/>

            <LinearLayout
                android:id="@+id/register_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white">

                <ImageView
                    style="@style/login_img_style"
                    android:src="@drawable/icon_register_password"/>

                <EditText
                    android:id="@+id/register_input_password"
                    style="@style/login_edit_style"
                    android:hint="请输入您的密码"
                    android:inputType="textPassword"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/login_line_middle"/>

            <LinearLayout
                android:id="@+id/register_password_layout_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white">

                <ImageView
                    style="@style/login_img_style"
                    android:src="@drawable/icon_register_password"/>

                <EditText
                    android:id="@+id/register_input_password_again"
                    style="@style/login_edit_style"
                    android:hint="请再次输入您的密码"
                    android:inputType="textPassword"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/login_line_middle"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/register_identifying_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/register_identifying_code_img"
                    android:layout_centerVertical="true"
                    style="@style/login_img_style"
                    android:src="@drawable/icon_register_identifying_code"/>

                <EditText
                    android:id="@+id/register_input_identifying_code"
                    style="@style/register_identifying_code_edit_style"
                    android:hint="请输入您的验证码"
                    android:inputType="number"
                    android:imeOptions="actionDone"/>

            </LinearLayout>

                <Button
                    android:id="@+id/register_identifying_code_send_btn"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/identifying_code_btn_selector"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:text="获取验证码"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/login_line"/>

        </LinearLayout>

        <Button
            android:id="@+id/register_activity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_btn_selector"
            android:gravity="center_horizontal"
            android:text="注 册"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </LinearLayout>
</com.edu.zwu.hydrops.view.LoginLayout>