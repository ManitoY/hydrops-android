<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="25dp"
    android:paddingLeft="25dp"
    android:paddingBottom="20dp"
    android:paddingTop="35dp"
    android:orientation="vertical"
    android:background="@drawable/map_infowindow_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.edu.zwu.hydrops.view.FontTextView
            android:id="@+id/window_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:textColor="@color/map_window_middle_text_color"
            android:textSize="12sp"/>

        <com.edu.zwu.hydrops.view.FontTextView
            android:id="@+id/window_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/map_window_edge_text_color"
            android:textSize="12sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@color/map_window_line_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/window_picture"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"/>

        <com.edu.zwu.hydrops.view.FontTextView
            android:id="@+id/window_height_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/map_window_middle_text_color"
            android:layout_toRightOf="@+id/window_picture"
            android:layout_marginLeft="3dp"
            android:textSize="8sp"/>

        <com.edu.zwu.hydrops.view.FontTextView
            android:id="@+id/window_height_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/map_window_middle_text_color"
            android:layout_below="@id/window_height_title"
            android:layout_alignParentRight="true"
            android:textSize="20sp"/>

        <com.edu.zwu.hydrops.view.FontTextView
            android:id="@+id/window_acr_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/map_window_middle_text_color"
            android:textSize="8sp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/window_picture"
            android:layout_below="@+id/window_height_content"/>
        <com.edu.zwu.hydrops.view.FontTextView
            android:id="@+id/window_acr_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/map_window_middle_text_color"
            android:layout_below="@id/window_acr_title"
            android:layout_alignParentRight="true"
            android:textSize="20sp" />
        <com.edu.zwu.hydrops.view.FontTextView
            android:id="@+id/window_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/window_acr_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/map_window_edge_text_color"
            android:layout_alignParentRight="true"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>